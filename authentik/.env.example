# Authentik SSO Configuration
# Copy this file to .env and fill in your actual values

# Domain Configuration
DOMAIN=example.com  # Replace with your domain

# Database Credentials
AUTHENTIK_POSTGRES_PASSWORD=secure_postgres_password_here  # PostgreSQL password

# Redis Credentials
AUTHENTIK_REDIS_PASSWORD=secure_redis_password_here  # Redis password

# Security Keys (CRITICAL - Generate unique keys!)
# Generate with: openssl rand -base64 32
AUTHENTIK_SECRET_KEY=generate_a_random_secret_key_here_at_least_50_chars

# Bootstrap Configuration (Optional - for initial setup)
AUTHENTIK_BOOTSTRAP_PASSWORD=initial_admin_password  # First admin password
AUTHENTIK_BOOTSTRAP_TOKEN=initial_api_token  # API token for automation
AUTHENTIK_BOOTSTRAP_EMAIL=admin@example.com  # Admin email

# Email Configuration (Optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=noreply@example.com
EMAIL_PASSWORD=email_password_here
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_FROM=noreply@example.com

# Logging
LOG_LEVEL=info  # Options: debug, info, warning, error